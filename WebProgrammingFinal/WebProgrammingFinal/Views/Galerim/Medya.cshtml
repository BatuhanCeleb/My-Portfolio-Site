@model IEnumerable<WebProgrammingFinal.Models.Galerim>


@{
    ViewData["Title"] = "Galerim";
    Layout = "~/Views/Shared/NavBar.cshtml";

}
<head>
    GALERİM
</head>

<table border=1 bordercolor=black align=center>
    <tr>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <li>
                    <img src="@Url.Content(@item.Photo)"
                         alt="IMAGE"
                         width="250" height="250" style="margin: 5px 5px 5px 5px ">
                </li>
            }
        }
    </tr>

    <p>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <iframe width="720" height="480" src="@Url.Content(@item.Video)"
                        title="YouTube video player"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            }
        }
    </p>
</table>

